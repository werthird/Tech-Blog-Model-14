{{!-- DISPLAY POST --}}
<div style="border: 2px solid red">
  <div class="col-md-6">
  <h3>Edit Post:</h3>
  <form class="form edit-post-form">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
    </div>
    <div class="form-group">
      <label for="post-content">Post:</label>
      <textarea class="form-input" id="post-content" name="post-content">{{post.post}}</textarea>
    </div>
    <input type="hidden" id="post-id" value="{{post.id}}">
    <div class="update-post-button">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
    <div class="delete-post-button">
      <button type="submit" class="btn btn-primary">Delete</button>
    </div>
  </form>
</div>

{{!-- LINK CLIENT SIDE JS FILE --}}
<script src="../../js/edit.js"></script>