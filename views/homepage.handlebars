<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
  <div class="card">
    <div id="card-header">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <p> - <span id="italic-span">By</span> {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div>
      <p>
        {{post.post}}
      </p>
    </div>
  </div>
{{/each}}
