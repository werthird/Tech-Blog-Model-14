{{!-- DISPLAY POST --}}
<div style="border: 2px solid red">
  <div class="col-md-6">
  <h3>Edit Post:</h3>
  <form class="form edit-post-form">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
    </div>
    <div class="form-group">
      <label for="post-content">Post:</label>
      <textarea class="edit-post" id="post-content" name="post-content">{{{restore_content post.post}}}</textarea>
    </div>
    <input type="hidden" id="post-id" value="{{post.id}}">
    <div class="update-post-button">
      <button type="submit" class="update-post-button">Update</button>
    </div>
    <div class="">
      <button type="submit" class="delete-post-button">Delete</button>
    </div>
  </form>
</div>

<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>